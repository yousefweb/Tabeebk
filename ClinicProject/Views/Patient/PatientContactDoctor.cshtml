@model PatientNoteToDoctor

<h2 style="color: brown">Contact Doctor</h2>

<form asp-action="PatientContactDoctor" method="post">
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label asp-for="Note">Notes:</label>
        <textarea asp-for="Note" class="form-control" style="height: 200px; vertical-align: top;"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
