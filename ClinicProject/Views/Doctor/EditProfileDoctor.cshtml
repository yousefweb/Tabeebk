@model Doctor

@{
    ViewData["Title"] = "EditProfileDoctor";
    Layout = "~/Views/Shared/Doctor_Layout/_Layout_Doctor.cshtml";
}

    <div class="card-body">
    <form asp-action="EditProfileDoctor" enctype="multipart/form-data" method="post">
        @Html.HiddenFor(x=>x.DoctorId)
        <div asp-validation-summary="All" class="text-danger"></div>
            <h6 class="heading-small text-muted mb-4">Doctor information</h6>
            <div class="pl-lg-4">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_UserName" class="control-label"></label>
                            <input asp-for="@Model.Doctor_UserName" class="form-control" value="@Model.Doctor_UserName"  />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_Email" class="control-label"></label>
                            <input asp-for="@Model.Doctor_Email" class="form-control" value="@Model.Doctor_Email" type="email"  />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_FirstName" class="control-label"></label>
                            <input asp-for="@Model.Doctor_FirstName" class="form-control" value="@Model.Doctor_FirstName"   />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_LastName" class="control-label"></label>
                        <input asp-for="@Model.Doctor_LastName" class="form-control" value="@Model.Doctor_LastName"  />
                            <span asp-validation-for="@Model.Doctor_LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_Age" class="control-label"></label>
                            <input asp-for="@Model.Doctor_Age" class="form-control" value="@Model.Doctor_Age"  />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_PhoneNumber" class="control-label"></label>
                            <input asp-for="@Model.Doctor_PhoneNumber" class="form-control" value="@Model.Doctor_PhoneNumber"  />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_Gender" class="control-label"></label>
                        <select asp-for="Doctor_Gender" >
                            @if (ViewBag.gender != null)
                            {
                                <option disabled selected>Select gender</option>
                                foreach (var G in ViewBag.gender)
                                {
                                    <option value="@G">@G</option>
                                }

                            }

                        </select>
                    </div>
                    </div>


                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="@Model.Doctor_Specialization" class="control-label"></label>
                        <select asp-for="Doctor_Specialization" >

                            @if (ViewBag.Specialization != null)
                        {
                            <option disabled selected>Select specialization</option>
                            foreach (var G in ViewBag.Specialization)
                            {
                                <option value="@G">@G</option>
                            }
                        }
                        </select>
                        </div>
                    </div>
                <input  type="submit" value="save" class="btn btn-info" style="margin-right:250px;" />
            </div>


            </div>
       
            </form>
    </div>
